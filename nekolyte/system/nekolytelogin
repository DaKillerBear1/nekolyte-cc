-- NekolyteOS
-- created by starstruck.
os.pullEvent = os.pullEventRaw
NekoLyteRoot = "/nekolyte/"
NekoLyteHome = "/nekolyte/home/"
NekoLyteVer = "a1.3"
NekoLyteBuild = "054"
nekolyteloginp = paintutils.loadImage("nekolyte/system/nkltloginp")



function clear(resetpos) -- Make 'resetpos' a simple boolean
  resetpos = resetpos or false -- Makes resetpos default to 'false' so as to not get nil (altough it would still work)
  if resetpos then
    term.clear()
    term.setCursorPos(1,1)
  else
    term.clear()
  end
end
while true do
clear(true)
paintutils.drawImage(nekolyteloginp,1,1)
term.setCursorPos(17,6)
term.setBackgroundColor(colors.lightBlue)
print("Username:")
term.setCursorPos(17,8)
term.setBackgroundColor(colors.lightBlue)
print("Password:")
term.setCursorPos(17,7)
term.setBackgroundColor(colors.gray)
write("")
local un = read()

if #un == 0 then
term.setCursorPos(17,13)
term.setBackgroundColor(colors.black)
print("Incorrect Username")
sleep(3)
else
if fs.exists("nekolyte/home/users/"..un) then
term.setCursorPos(17,9)
term.setBackgroundColor(colors.gray)
write("")
local pw = read("*")
if #pw == 0 then
term.setCursorPos(17,13)
term.setBackgroundColor(colors.black)
print("Incorrect Password.")
sleep(3)
else
if fs.exists("nekolyte/home/passwords/"..pw) then
term.setCursorPos(17,13)
term.setBackgroundColor(colors.black)
shell.run("/nekolyte/system/nekolytegui")
else
term.setCursorPos(17,13)
term.setBackgroundColor(colors.black)
print("Incorrect Password.")
sleep(3)
end
end
else
term.setCursorPos(17,13)
term.setBackgroundColor(colors.black)
print("Incorrect Username")
sleep(3)
end
end
end
